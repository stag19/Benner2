@model ProjetoAr3.Models.funcionario

@{
    ViewBag.Title = "Create";
}
<head>

    <script type="text/javascript">
        function mascara(i) {

            var v = i.value;

            if (isNaN(v[v.length - 1])) { // impede entrar outro caractere que não seja número
                i.value = v.substring(0, v.length - 1);
                return;
            }

            i.setAttribute("maxlength", "14");
            if (v.length == 3 || v.length == 7) i.value += ".";
            if (v.length == 11) i.value += "-";

        }
    </script>
</head>
<h2>Registrar Funcionário</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           
            <div class="col-md-10">
                Nome:
                <input type="text" name="usuario.Nome" />
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                Senha:
                <input type="password" name="usuario.Senha" />
            </div>
        </div>


        <div class="form-group">
          
            <div class="col-md-10">
                Email:
                <input type="email" name="funcionario.Email" />
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                Cpf:
                <input oninput="mascara(this)" type="text" name="funcionario.Cpf" />

            </div>
        </div>
        <div class="form-group">
            <div class="col-md col-md-10">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
