@model ProjetoAr3.Models.Usuario

@{
    ViewBag.Title = "Details";
    Layout = null;
}




<html lang="pt-br">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    @Styles.Render("~/vendor/bootstrap/css/bootstrap.min.css")

    <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/fonts/iconic/css/material-design-iconic-font.min.css" rel="stylesheet">
    @Styles.Render("~/vendor/animate/animate.css")
    @Styles.Render("~/vendor/css-hamburgers/hamburgers.min.css")

    @Styles.Render("~/vendor/animsition/css/animsition.min.css")
    @Styles.Render("~/vendor/select2/select2.min.css")

    @Styles.Render("~/vendor/daterangepicker/daterangepicker.css")


    @Styles.Render("~/css/main.css")

    <link href="~/css/util.css" rel="stylesheet" />

    <!--===============================================================================================-->




</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <form class="login100-form validate-form" action="/Login/Autentica" method="post">


                    <span class="login100-form-title p-b-49">
                        Login
                    </span>

                    <div class="wrap-input100 validate-input m-b-23" data-validate="Nome Requerido">
                        <span class="label-input100">Nome</span>
                        <input class="input100" type="text" name="login" id="login" placeholder="Digite seu Nome">
                        <span class="focus-input100" data-symbol="&#xf206;"></span>
                    </div>

                    <div class="wrap-input100 validate-input" data-validate="Senha Requerida">
                        <span class="label-input100">Senha</span>
                        <input class="input100" type="password" name="senha" id="senha" placeholder="Digite sua Senha">
                        <span class="focus-input100" data-symbol="&#xf190;"></span>
                    </div>
                    @Html.ValidationSummary(null, new { @class = "text-danger" })
                    <div class="text-right p-t-8 p-b-31">
                        <a href="#">
                            Esqueceu sua senha?
                        </a>
                    </div>


                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn type=" submit" value="Logar" ">
                                Login
                            </button>
                        </div>
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />
                    <br />




                    <div class="flex-c-m">
                        <a href="#" class="login100-social-item bg1">
                            <i class="fa fa-facebook"></i>
                        </a>

                        <a href="#" class="login100-social-item bg2">
                            <i class="fa fa-twitter"></i>
                        </a>

                        <a href="#" class="login100-social-item bg3">
                            <i class="fa fa-google"></i>
                        </a>
                    </div>

                    <div class="flex-col-c p-t-155">
                        <span class="txt1 p-b-17">
                            Não tem uma conta?
                        </span>

                        <a href="http://localhost:51497/clientes/Create" class="txt2">
                            Registrar-se
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    @Scripts.Render("~/vendor/jquery/jquery-3.2.1.min.js")
    @Scripts.Render("~/vendor/animsition/js/animsition.min.js")
    @Scripts.Render("~/vendor/bootstrap/js/popper.js")
    @Scripts.Render("~/vendor/bootstrap/js/bootstrap.min.js")
    @Scripts.Render("~/vendor/select2/select2.min.js")
    @Scripts.Render("~/vendor/daterangepicker/moment.min.js")
    @Scripts.Render("~/vendor/daterangepicker/daterangepicker.js")
    @Scripts.Render("~/vendor/countdowntime/countdowntime.js")
    @Scripts.Render("~/js/main.js")


    <!--===============================================================================================-->


</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




