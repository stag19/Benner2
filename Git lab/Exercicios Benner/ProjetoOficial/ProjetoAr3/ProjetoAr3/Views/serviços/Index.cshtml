@model IEnumerable<ProjetoAr3.Models.serviços>

@{
    ViewBag.Title = "Cadastros";
}
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<h2>Cadastro de Serviço</h2>
<br />
<p>

    @Html.ActionLink("Novo Cadastro", "Create", new { id = 3 }, new { @class = "btn btn-primary btn-lg btn-block" })
</p>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Serviço)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preço)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Serviço)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preço)
            </td>
 
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
