@model ProjetoAr3.Models.funcionario

@{
    ViewBag.Title = "Create";
}

<h2>Registrar Funcionário</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Nome:
            <div class="col-md-10">
                <input type="text" name="usuario.Nome" />
            </div>
        </div>

        <div class="form-group">
            Senha:
            <div class="col-md-10">
                <input type="text" name="usuario.Senha" />
            </div>
        </div>


        <div class="form-group">
            Email:
            <div class="col-md-10">
                <input type="text" name="funcionario.Email" />
            </div>
        </div>

        <div class="form-group">
            Cpf:
            <div class="col-md-10">
                <input type="text" name="funcionario.Cpf" />

            </div>
        </div>
        <div class="form-group">
            <div class="col-md col-md-10">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
