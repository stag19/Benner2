
@model ProjetoAr3.Models.produtos

    @{
        ViewBag.Title = "Details";
    }
    <head>
        <style>
            table {
                font-family: arial, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }

            td, th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #dddddd;
            }
        </style>
    </head>
    <h2>Detalhes do Produto</h2>

    <div>


        <table>

            <tr>
                <th>Nome:</th>
                <td>@Html.DisplayFor(model => model.Nome)</td>

            </tr>
            
            <tr>
                <th>Categoria:</th>
                <td>@ViewBag.NomeCategoria</td>

            </tr>

        </table>
        <hr />



    </div>
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Voltar para a lista de cadastros", "Index")
    </p>

